{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <article>
        <h1>
            {{ post.title }}
        </h1>

        <p>
            <span>{{ post.publishedAt|format_datetime('long', 'medium', '', 'UTC') }}</span>
            / <span>{{ post.author.username }}</span>
        </p>

        {{ post.content|markdown_to_html|sanitize_html }}
    </article>
{% endblock %}
